{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2020", "dom"],
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["lib, node_modules"],
  "include": ["src/**/*.ts"]
}
